<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registrar Venda - CasaFácil</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header class="site-header">
    <div class="container">
      <h1 class="logo">Imobiliária <span class="accent">CasaFácil</span></h1>
      <nav class="nav">
        <a href="/">Voltar para Imóveis</a>
        <a href="/vendas">Lista de Vendas</a>
        <a href="/vendas/resumo">Resumo de Vendas</a>
      </nav>
    </div>
  </header>

  <main class="container">
    <h2>Registrar Venda</h2>

    <% if (!imoveis || imoveis.length === 0) { %>
      <p>Não há imóveis disponíveis para venda.</p>
    <% } else { %>
      <form action="/vendas/create" method="POST" class="form">
        <label>Selecionar Imóvel
          <select name="imovelId" id="imovelSelect" required onchange="atualizarValor()">
            <% imoveis.forEach(imovel => { %>
              <% if (!imovel.vendido) { %>
                <option value="<%= imovel.id %>" data-preco="<%= imovel.preco %>">
                  <%= imovel.titulo %> - R$ <%= imovel.preco.toLocaleString('pt-BR', { minimumFractionDigits: 2 }) %>
                </option>
              <% } %>
            <% }) %>
          </select>
        </label>

        <label>Valor da Venda
          <input type="number" step="0.01" name="valor" id="valorVenda" required>
        </label>

        <button type="submit" class="btn">Registrar Venda</button>
      </form>
    <% } %>
  </main>

  <script>
    function atualizarValor() {
      const select = document.getElementById('imovelSelect');
      const valorInput = document.getElementById('valorVenda');
      const preco = select.options[select.selectedIndex].dataset.preco;
      valorInput.value = preco;
    }

    // Inicializa o valor do primeiro imóvel
    if (document.getElementById('imovelSelect')) {
      atualizarValor();
    }
  </script>
</body>
</html>
